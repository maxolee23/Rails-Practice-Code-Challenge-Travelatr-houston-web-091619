<% if flash[:error] %> 
<% flash[:error].each do |error| %> 
<li><%= error %> </li> 
<% end %> 
<% end %>


<%= form_for @post do |f| %> 
<h2>Enter post title: <%= f.text_field :title, placeholder: "Title"%> </h2>
<h2>Enter post content: <%= f.text_field :content, placeholder: "Post Content"%> </h2>
<%= f.collection_select :blogger_id, @bloggers, :id, :name %> 
<%= f.collection_select :destination_id, @destinations, :id, :name %>
<%= f.submit %> 
<% end %> 